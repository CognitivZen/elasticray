<?xml version="1.0"?>

<beans
	default-destroy-method="destroy"
	default-init-method="afterPropertiesSet"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd"
>
	<bean class="com.liferay.portal.spring.context.PortletBeanFactoryPostProcessor" />


	<bean id="com.liferay.portal.search.elastic.ElasticsearchEngineImpl" class="com.liferay.portal.kernel.search.BaseSearchEngine">
		<property name="clusteredWrite" value="false" />
		<property name="indexSearcher" ref="com.liferay.portal.search.elastic.ElasticsearchIndexSearcher" />
		<property name="indexWriter" ref="com.liferay.portal.search.elastic.ElasticsearchIndexWriter" />
		<property name="luceneBased" value="true" />
		<property name="vendor" value="Elasticsearch" />
	</bean>
	<bean id="com.liferay.portal.search.elastic.ElasticsearchIndexSearcher" class="com.liferay.portal.search.elastic.ElasticsearchIndexSearcher">
        <property name="serverIP" value="127.0.0.1"/>
        <property name="port" value="9300"/>
	</bean>
	<bean id="com.liferay.portal.search.elastic.ElasticsearchIndexWriter" class="com.liferay.portal.search.elastic.ElasticsearchIndexWriter" >
        <property name="serverIP" value="127.0.0.1"/>
        <property name="port" value="9300"/>
	</bean>


    <bean id="searchEngineConfigurator.elastic" class="com.liferay.portal.kernel.search.PluginSearchEngineConfigurator">
        <property name="searchEngines">
            <util:map>
                <entry key="SYSTEM_ENGINE" value-ref="com.liferay.portal.search.elastic.ElasticsearchEngineImpl" />
            </util:map>
        </property>
    </bean>

</beans>